}

.tile-details-rent-scroll .unity-base-slider__dragger:hover {
    background-color: rgba(30, 100, 65, 0.95);
}

.tile-details-rent-scroll .unity-repeat-button {
    display: none;
}

.tile-details-rent-scroll .unity-scroll-view__vertical-scroller .unity-base-slider__input {
    border-width: 0;
    background-color: rgba(0, 0, 0, 0);
}

.tile-details-footer {
