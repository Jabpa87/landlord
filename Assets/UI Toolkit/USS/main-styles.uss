.popup-shell {
    position: relative;
    align-self: center;
    background-color: rgba(23, 55, 34, 0.92);
    border-radius: 14px;
    border-width: 1px;
    border-color: rgba(198, 164, 79, 0.95);
}

.popup-header-banner {
    width: 90%;
    height: 520px;
    align-self: center;
}

.popup-body {
    width: 90%;
    align-self: center;
}

.popup-body Label,
.popup-body .unity-label {
    white-space: normal;
    overflow: visible;
}

/* Settings panel: font size button selected state */
.settings-font-btn.settings-font-selected {
    background-color: rgba(198, 164, 79, 0.5);
    border-width: 2px;
    border-color: rgb(218, 184, 99);
}

.monopoly-toggle .unity-toggle__input {
    min-width: 44px;
    min-height: 24px;
}

.monopoly-toggle .unity-label {
    font-size: 18px;
    color: rgb(255, 248, 227);
}

.popup-footer {
    width: 90%;
    align-self: center;
}

.popup-title-display {
    font-size: 40px;
    -unity-font-style: bold;
}

.popup-body-text {
    font-size: 20px;
}

/* Trade panel: money input visibility (dark bg, white text, larger font) */
.trade-money-field .unity-base-field__input,
.trade-money-field .unity-integer-field__input {
    background-color: rgba(15, 45, 28, 0.98);
    border-width: 2px;
    border-color: rgba(198, 164, 79, 0.6);
    border-radius: 6px;
    color: rgb(255, 255, 255);
    font-size: 20px;
    -unity-font-style: bold;
    min-height: 44px;
    padding-left: 10px;
    padding-right: 10px;
}

.trade-money-field .unity-label {
    color: rgb(238, 220, 180);
    font-size: 17px;
    -unity-font-style: bold;
}

.trade-view-board-btn {
    min-width: 120px;
}

.trade-target-btn {
    min-width: 100px;
    font-size: 17px;
}

.trade-target-btn.selected {
    border-color: rgb(238, 200, 93);
    border-width: 3px;
    background-color: rgba(40, 90, 50, 0.95);
}

/* Trade panel: compact action buttons so VIEW BOARD, OFFER, CANCEL fit on one row */
#TradeActionButtons .monopoly-btn,
#TradeActionButtons .trade-view-board-btn {
    min-width: 100px;
    height: 52px;
    font-size: 17px;
    flex-grow: 0;
    flex-shrink: 1;
}
#TradeResponseButtons .monopoly-btn {
    min-width: 100px;
    height: 52px;
    font-size: 17px;
    flex-grow: 0;
    flex-shrink: 1;
}

.auction-header-title-hidden {
    display: none;
}

.auction-property-name-standard {
    top: 80px;
}

/*  Player Profile Popup (split layout: portrait left, stats right)  */

.profile-left-col {
    width: 220px;
    min-width: 180px;
    max-width: 240px;
    align-items: center;
    padding-top: 8px;
    padding-bottom: 16px;
    padding-left: 8px;
    padding-right: 18px;
    border-right-width: 2px;
    border-right-color: rgba(236, 205, 122, 0.3);
}

.profile-portrait {
    width: 190px;
    height: 240px;
    border-radius: 0;
    border-width: 0;
    background-color: rgba(0, 0, 0, 0);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center center;
    margin-bottom: 8px;
}

.profile-player-name {
    font-size: 22px;
    -unity-font-style: bold;
    color: #ffffff;
    -unity-text-align: middle-center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 2px;
}

.profile-character-name {
    font-size: 16px;
    -unity-font-style: italic;
    color: rgba(236, 205, 122, 0.95);
    -unity-text-align: middle-center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 10px;
}

.profile-stat-gold {
    font-size: 20px;
    -unity-font-style: bold;
    color: rgb(255, 215, 0);
    -unity-text-align: middle-center;
    margin-bottom: 4px;
}

.profile-stat-line {
    font-size: 15px;
    -unity-font-style: bold;
    color: #ffffff;
    -unity-text-align: middle-center;
    margin-bottom: 2px;
}

.profile-right-col {
    flex-grow: 1;
    flex-shrink: 1;
    padding-left: 18px;
    padding-right: 10px;
    padding-top: 4px;
    max-height: 420px;
}

.profile-details-line {
    font-size: 17px;
    -unity-font-style: bold;
    color: #ffffff;
    white-space: normal;
    margin-bottom: 6px;
}

.profile-backstory {
    font-size: 17px;
    color: rgba(255, 255, 255, 0.72);
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 10px;
    max-height: 60px;
}

.profile-section-title {
    font-size: 16px;
    -unity-font-style: bold;
    letter-spacing: 2px;
    margin-bottom: 4px;
    margin-top: 6px;
}

.profile-section-perk {
    color: rgb(76, 217, 100);
}

.profile-section-fault {
    color: rgb(255, 100, 80);
}

/* Modern ultra-thin scrollbar for profile right column: only thumb visible, dark green, rounded */
.profile-right-col .unity-scroll-view__vertical-scroller {
    width: 2px;
    min-width: 2px;
    background-color: rgba(0, 0, 0, 0);
    border-width: 0;
    margin-left: 10px;
    margin-right: 6px;
}

.profile-right-col .unity-base-slider__tracker {
    background-color: rgba(0, 0, 0, 0);
    border-radius: 0;
    border-width: 0;
}

.profile-right-col .unity-base-slider__dragger {
    width: 2px;
    background-color: rgba(20, 80, 50, 0.85);
    border-radius: 2px;
    border-width: 0;
    min-height: 20px;
}

.profile-right-col .unity-base-slider__dragger:hover {
    background-color: rgba(30, 100, 65, 0.95);
}

.profile-right-col .unity-repeat-button {
    display: none;
}

.profile-right-col .unity-scroll-view__vertical-scroller .unity-base-slider__input {
    border-width: 0;
    background-color: rgba(0, 0, 0, 0);
}
