.gameplay-hud-player-panel {
    position: absolute;
    flex-direction: column;
    align-items: stretch;
    width: 100%;
    height: auto;
    min-width: 20%;
    max-width: 30%;
    min-height: auto;
    padding: 16px 18px;
    background-color: rgb(18, 55, 28);
    border-radius: 18px;
    border-width: 2px;
    border-color: rgb(198, 164, 79);
}

