/* Main HUD Styles - Redesigned with Standard UI Style */
.main-hud {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    display: flex;
}

/* Top Panel - Card Style */
.main-hud-top-panel {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 180px;
    background-color: rgb(33, 43, 55);
    border-radius: 0 0 16px 16px;
    border-width: 0 0 2px 0;
    border-color: rgb(20, 28, 36);
    flex-direction: column;
}

.main-hud-top-header {
    padding: 12px 20px;
    background-color: rgb(18, 102, 173);
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-width: 2px;
    border-bottom-color: rgb(10, 60, 110);
}

.main-hud-top-title {
    font-size: 24px;
    color: white;
    -unity-font-style: bold;
    -unity-text-align: middle-left;
}

.main-hud-top-body {
    padding: 12px 20px;
    flex-direction: row;
    align-items: center;
    flex-grow: 1;
}

.main-hud-wallet-text {
    font-size: 20px;
    color: #4CAF50;
    -unity-font-style: bold;
    -unity-text-align: middle-left;
}

.main-hud-supply-text {
    font-size: 17px;
    color: rgba(255, 255, 255, 0.75);
    -unity-text-align: middle-left;
}

.main-hud-doubles-text {
    font-size: 17px;
    color: #FFD700;
    -unity-font-style: bold;
    -unity-text-align: middle-left;
    margin-left: auto;
}

/* Bottom Panel - Card Style */
.main-hud-bottom-panel {
    position: absolute;
    bottom: 80px;
    left: 0;
    right: 0;
    height: 160px;
    background-color: rgb(33, 43, 55);
    border-radius: 16px 16px 0 0;
    border-width: 2px 0 0 0;
    border-color: rgb(20, 28, 36);
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 15px 20px;
}

/* Left and Right Player Sides */
.main-hud-players-side {
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    width: 200px;
}

/* Individual Player Info */
.main-hud-player-info {
    flex-direction: row;
    align-items: center;
    width: 100%;
    padding: 8px 12px;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    border-width: 1px;
    border-color: rgba(255, 255, 255, 0.1);
}

.main-hud-player-avatar {
    width: 40px;
    height: 40px;
    border-radius: 20px;
    background-color: #555;
    border-width: 2px;
    border-color: white;
    flex-shrink: 0;
}

.main-hud-player-name {
    font-size: 17px;
    color: white;
    -unity-font-style: normal;
    -unity-text-align: middle-left;
    min-width: 70px;
}

.main-hud-player-money {
    font-size: 16px;
    color: #4CAF50;
    -unity-font-style: bold;
    -unity-text-align: middle-left;
    margin-left: auto;
}

/* Center Controls */
.main-hud-center-controls {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
}

.main-hud-dice-container {
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.main-hud-dice-text {
    font-size: 18px;
    color: white;
    -unity-font-style: normal;
    -unity-text-align: middle-center;
}

.main-hud-roll-button {
    width: 200px;
    height: 50px;
    font-size: 20px;
    background-color: rgb(50, 170, 70);
    color: white;
    border-radius: 10px;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    border-width: 0;
}

.main-hud-roll-button:hover {
    background-color: rgb(45, 150, 60);
}

.main-hud-roll-button:active {
    background-color: rgb(40, 130, 50);
}

.main-hud-roll-button:disabled {
    background-color: rgb(90, 100, 110);
    color: rgba(255, 255, 255, 0.5);
}

/* Action Buttons Row - Footer Style */
.main-hud-action-buttons-row {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 70px;
    background-color: rgb(33, 43, 55);
    border-radius: 16px 16px 0 0;
    border-width: 2px 0 0 0;
    border-color: rgb(20, 28, 36);
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 10px;
}

.main-hud-action-btn {
    height: 45px;
    min-width: 100px;
    font-size: 17px;
    background-color: rgb(50, 170, 70);
    color: white;
    border-radius: 8px;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    border-width: 0;
}

.main-hud-action-btn:hover {
    background-color: rgb(45, 150, 60);
}

.main-hud-action-btn:active {
    background-color: rgb(40, 130, 50);
}

.main-hud-action-btn:disabled {
    background-color: rgb(90, 100, 110);
    color: rgba(255, 255, 255, 0.5);
}

.main-hud-trade-btn {
    background-color: rgb(200, 60, 60);
}

.main-hud-trade-btn:hover {
    background-color: rgb(180, 50, 50);
}

.main-hud-trade-btn:active {
    background-color: rgb(160, 40, 40);
}

/* Button Styles */
.action-button {
    width: 200px;
    height: 60px;
    margin: 10px;
    font-size: 24px;
    background-color: #2196F3;
    color: white;
    border-radius: 8px;
    -unity-font-style: normal;
    -unity-text-align: middle-center;
}

.action-button:hover {
    background-color: #1976D2;
}

.action-button:active {
    background-color: #0D47A1;
}

.action-button:disabled {
    background-color: #666;
    color: #999;
}

/* Modal Panel Styles */
.modal-panel {
    position: absolute;
    width: 600px;
    min-height: 300px;
    left: 50%;
    top: 50%;
    margin-left: -300px; /* Half of width for centering */
    margin-top: -150px; /* Half of min-height for centering */
    background-color: rgba(30, 30, 30, 0.95);
    border-radius: 12px;
    padding: 30px;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-width: 2px;
    border-color: #4CAF50;
}

.panel-title {
    font-size: 28px;
    color: white;
    margin-bottom: 20px;
    -unity-text-align: middle-center;
    -unity-font-style: normal;
    white-space: normal;
}

.primary-button {
    width: 250px;
    height: 50px;
    margin: 10px;
    font-size: 20px;
    background-color: #4CAF50;
    color: white;
    border-radius: 8px;
    -unity-font-style: normal;
    -unity-text-align: middle-center;
}

.primary-button:hover {
    background-color: #45a049;
}

.primary-button:disabled {
    background-color: #666;
    color: #999;
}

.secondary-button {
    width: 250px;
    height: 50px;
    margin: 10px;
    font-size: 20px;
    background-color: #666;
    color: white;
    border-radius: 8px;
    -unity-font-style: normal;
    -unity-text-align: middle-center;
}

.secondary-button:hover {
    background-color: #777;
}

/* Profile Picture */
.profile-picture {
    width: 80px;
    height: 80px;
    border-radius: 40px;
    background-color: #555;
    border-width: 2px;
    border-color: white;
}

/* Card Panel: center on board */
#CardOverlay {
    justify-content: center;
    align-items: center;
    padding-top: 0;
}

#CardPanel,
.card-panel-center {
    position: relative;
    left: 0;
    right: 0;
    align-self: center;
    margin-left: auto;
    margin-right: auto;
}

.card-overlay-center {
    justify-content: center;
    align-items: center;
    padding-top: 0;
}

